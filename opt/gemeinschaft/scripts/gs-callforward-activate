define( 'GS_VALID', true );  /// this is a parent file

require_once( dirName(__FILE__) .'/../inc/conf.php' );
include_once( GS_DIR .'lib/getopt.php' );
include_once( GS_DIR .'inc/gs-lib.php' );
include_once( GS_DIR .'inc/gs-fns/gs_callforward_activate.php' );


/***********************************************************
*    the shell parameters
***********************************************************/
$usage = 'Usage: '. baseName(__FILE__) .' --user=<user> --source=internal|external --case=always|busy|unavail|offline --active=no|std|var|vml|ano|trl|par';

$opts = @getOptsNoMultiples( '',
	array(
		'user=',
		'source=',
		'case=',
		'active='
	),
	$usage
);
if (! isSet($opts['user'])
 || ! isSet($opts['source'])
 || ! isSet($opts['case'])
 || ! isSet($opts['active'])
 ) {
	gs_script_invalid_usage( $usage );
}


/***********************************************************
*    call the function
***********************************************************/
$ret = @ gs_callforward_activate( $opts['user'], $opts['source'], $opts['case'], $opts['active'] );
if (isGsError( $ret )) gs_script_error( $ret->getMsg() );
if (! $ret)            gs_script_error();
echo "Call forward set.\n";

?>