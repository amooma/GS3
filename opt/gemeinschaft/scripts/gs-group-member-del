define( 'GS_VALID', true );  /// this is a parent file

require_once( dirName(__FILE__) .'/../inc/conf.php' );
include_once( GS_DIR .'lib/getopt.php' );
include_once( GS_DIR .'inc/gs-lib.php' );
include_once( GS_DIR .'inc/group-fns.php' );

/***********************************************************
*    the shell parameters
***********************************************************/
$usage = 'Usage: '. baseName(__FILE__) .' --group=<group> --member=<member> [--exclude]';

$opts = @getOptsNoMultiples( '',
	array(
		'group=',
		'member=',
		'exclude'
	),
	$usage
);
if (! isSet($opts['group'])
 || ! isSet($opts['member'])
 ) {
	gs_script_invalid_usage( $usage );
}

$exclude = array_key_exists('exclude', $opts);

/***********************************************************
*    call the function
***********************************************************/
$group_id = @gs_group_id_get( $opts['group'] );

if (isGsError( $group_id )) gs_script_error( $group_id->getMsg() );
if (! $group_id)            gs_script_error();

$ret = @ gs_group_member_del( $group_id, $opts['member'], $exclude );

if (isGsError( $ret )) gs_script_error( $ret->getMsg() );
if (! $ret)            gs_script_error();

echo "Group member deleted.\n";


?>