define( 'GS_VALID', true );  /// this is a parent file

require_once( dirName(__FILE__) .'/../inc/conf.php' );
include_once( GS_DIR .'lib/getopt.php' );
include_once( GS_DIR .'inc/gs-lib.php' );
include_once( GS_DIR .'inc/gs-fns/gs_user_change.php' );


/***********************************************************
*    the shell parameters
***********************************************************/
$usage = 'Usage: '. baseName(__FILE__) .' --user=<user> --pin=<123456> --firstname=<firstname> --lastname=<lastname> --email=<email> --host=<id>|<ip> [--force] [--no-reload]';

$opts = @getOptsNoMultiples( '',
	array(
		'user=',
		'pin=',
		'firstname=',
		'lastname=',
		'email=',
		'host=',
		'force',
		'no-reload'
	),
	$usage
);
if (! isSet($opts['user'])
 || ! isSet($opts['pin'])
 || ! isSet($opts['firstname'])
 || ! isSet($opts['lastname'])
 || ! isSet($opts['email'])
 || ! isSet($opts['host'])
 ) {
	gs_script_invalid_usage( $usage );
}
$opts['force'] = array_key_exists('force', $opts);

$reload = !(array_key_exists('no-reload', $opts));

/***********************************************************
*    call the function
***********************************************************/
$ret = @ gs_user_change( $opts['user'], $opts['pin'], $opts['firstname'], $opts['lastname'], $opts['host'], $opts['force'], $opts['email'], $reload );
if (isGsError( $ret )) gs_script_error( $ret->getMsg() );
if (! $ret)            gs_script_error();
echo "User changed.\n";


?>