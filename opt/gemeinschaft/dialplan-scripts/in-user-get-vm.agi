define( 'GS_VALID', true );  /// this is a parent file
require_once( dirName(__FILE__) .'/../inc/conf.php' );
require_once( GS_DIR .'inc/agi-fns.php' );

ini_set('implicit_flush', 1);
ob_implicit_flush(1);


$uname  = trim(@$argv[1]);

if (! $uname) gs_agi_err();
if (! preg_match('/^\d+$/', $uname)) {  // is not just digits
	gs_agi_err();
}


include_once( GS_DIR .'inc/db_connect.php' );


$db = gs_db_slave_connect();

# get user id:
$uid = (int)$db->executeGetOne( 'SELECT `_user_id` FROM `ast_sipfriends` WHERE `name`=\''. $db->escape($uname) .'\'' );
if ($uid < 1) gs_agi_err();



$vm = array(
	'internal_active'  => 0,
	'external_active'  => 0
);

$rs = $db->execute( 'SELECT `internal_active`, `external_active` FROM `vm` WHERE `user_id`='. $uid );
if ($r = $rs->fetchRow()) {
	$vm['internal_active'] = $r['internal_active'];
	$vm['external_active'] = $r['external_active'];
}

gs_agi_set_variable( 'vm_internal_active', $vm['internal_active'] );
gs_agi_set_variable( 'vm_external_active', $vm['external_active'] );




$msgs = array(
	'internal' => '',
	'external' => ''
);
foreach ($msgs as $src => $ignore) {
	$fname = GS_DIR .'vm-rec/'. $uname .'-'. $src;
	if (file_exists( $fname .'.alaw' ))
		$msgs[$src] = $fname;
}
foreach ($msgs as $src => $file) {
	gs_agi_set_variable( 'vm_announce_'.$src, $file );
}



?>